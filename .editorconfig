root = true

# https://learn.microsoft.com/de-de/dotnet/fundamentals/code-analysis/code-style-rule-options
# https://github.com/dotnet/aspnetcore

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[*.cs]
indent_size = 4
dotnet_sort_system_directives_first = true

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
trim_trailing_whitespace = false
